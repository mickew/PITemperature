# Default server configuration
#
server {
        listen 80;
        server_name pitemperature.local www.pitemperature.local *.pitemperature.local;
        location / {
                proxy_pass  http://localhost:5004;
                proxy_redirect off;
                proxy_set_header HOST $host;
                proxy_buffering off;
                proxy_http_version 1.1;
                proxy_set_header Connection "";
        }
}


