        <Button x:Name="OSK_Button" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0" Background="Transparent" BorderThickness="0" Padding="0, -3, 0, 0" Grid.Column="0" Tapped="OSK_Button_Tapped">
